<style>
	/* Подключаем FontAwesome */
@import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css");

.container_dla_o_sebe_{
		display: flex; /* Размещаем текст и фото в одну строку */
    	align-items: center; /* Выравниваем элементы по центру */
		justify-content: space-between; /* Раздвигаем элементы: текст слева, фото справа */
		padding-left: 50px;
		padding-right: 75px;
		padding-bottom: 120px;
	}
	.container_o_sebe {
		max-width: 700px; /* Ограничение ширины */
		margin-right: auto; /* Центрирование контейнера */
		padding: 10px;
		background-color: #3f3f3fed; /* Светло-серый фон */
		border: 2px solid #ffffff; /* Граница контейнера */
		border-radius: 10px; /* Скругление углов */
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Лёгкая тень */
		font-family: Arial, sans-serif; /* Шрифт в стиле Википедии */
		line-height: 1.5; /* Увеличение межстрочного интервала */
		color:#ffffff;
	}
	.about-img-container {
		flex-shrink: 0; /* Запрещаем уменьшение фото */
    	margin-left: 50px; /* Двигаем фото дальше от текста */
	}
	.about-img-container::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.2); /* Затемнение 40% */
		border-radius: 20px; /* Округление, если нужно */
	}
	.about-img {
		width: 520px; /* Размер фото */
		height: auto;
		border-radius: 20px;
		object-fit: cover;
		border: 4px solid #000000; /* Граница фото */
	}

	.container_o_interes {
		display: flex;
		justify-content: center;
		gap: 150px;
		padding: 50px;
		padding-bottom: 100px;
	}

	
/* Карточки*/
.card {
    width: 250px;
    height: 350px;
    background: rgba(0, 0, 0, 0.8); /* Чёрный фон */
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    transition: all 0.3s ease-in-out;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    border: 2px solid transparent;
    background-clip: padding-box;
}

/* Градиентная анимация границы карточки */
@keyframes borderAnimation {
    0% { border-color: #ff00ff; }  /* Фиолетовый */
    50% { border-color: #ffcc00; } /* Жёлтый */
    100% { border-color: #1ccbe9; } /* Голубой */
}

/* Анимация свечения */
@keyframes glowShadow {
    0% { box-shadow: 0 0 15px #ff00ff, 0 0 30px #ffcc00; }
    50% { box-shadow: 0 0 20px #ffcc00, 0 0 40px #ff00ff; }
    100% { box-shadow: 0 0 15px #1ccbe9, 0 0 30px #1ccbe9; }
}

.card:before {
    content: "";
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.2); /* Затемнение 40% */
	border-radius: 20px; /* Округление, если нужно */
}
.card:hover::before{
	background: rgba(0, 0, 0, 0); /* Затемнение 80% */
}
/* Эффект свечения карточки при наведении */
.card:hover {
    border: 2px solid;
    animation: borderAnimation 3s infinite alternate, glowShadow 3s infinite alternate;
    transform: translateY(-5px);
}

/* Текст внутри карточки */
.card-text {
	width: 100%;
	padding: 12px;
	border-radius: 10px;
	font-size: 16px;
	color: white;
	text-align: center;
	position: absolute;
	bottom: 15px;
	background: rgba(0, 0, 0, 0.5);
	transition: all 0.4s ease-in-out;
}

/* Градиентная анимация текста */
@keyframes textGlow {
	0% { color: #ff00ff; }
	50% { color: #ffcc00; }
	100% { color: #00ffcc; }
}

/* Анимация текста при наведении */
.card:hover .card-text {
	animation: textGlow 3s infinite alternate;
}

/* Социальные иконки */
.codetheworld-io {
	display: flex;
	justify-content: center;
	padding-bottom: 100px;
}

.codetheworld-io a {
	margin: 0 10px;
	border-radius: 50%;
	width: 70px;
	height: 70px;
	display: flex;
	justify-content: center;
	align-items: center;
	text-decoration: none;
	transition: 0.5s;
	color: var(--color);
	font-size: 2.5em;
	position: relative;
	overflow: hidden;
	-webkit-box-reflect: below 5px linear-gradient(to bottom, rgba(0,0,0,0.0), rgba(0,0,0,0.4));
}

/* Эффект свечения при наведении */
.codetheworld-io a:hover {
	background: var(--color);
	color: #050801;
	box-shadow: 0 0 5px var(--color), 
				0 0 25px var(--color), 
				0 0 50px var(--color), 
				0 0 200px var(--color);
}

</style>